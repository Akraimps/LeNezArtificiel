@import 'nib'

/*
* Grab a custom font from Google
*/

@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
* Nib provides a CSS reset
*/

global-reset()

main-color = #fa5b4d
background-color = #faf9f0

body
	font-family 'Georgia'
	background-color background-color
	color #444

header
	font-family 'Quicksand'
	padding 40px 10px
	color #fff
	font-size 40px
	text-align center
	background-color  main-color
	vertical-align top
	img
		position absolute
		top 25px
		right 50px
	.widget
		position absolute
		margin 0px 10px 0px 40px
		padding 15px 40px 15px 40px
		top 10px
		float left
		color #444
		p
			font-size 20px
			text-align center
		h3
			font-size 15px
	
.container
	margin 50px 50px 0px 0px
	overflow hidden
	left 200px
		
	.widget
		position relative
		h1
			font-family 'Georgia'
		h2
			padding-top 10px
			border-top 1px dotted #ddd
		margin-right 10px
		padding-bottom 20px
		font-weight bold
		.PageNumber
			position absolute
			bottom 0px
			right 10px
		
.panel
	float left
	width 400px
	margin 50px

.main-content
	padding-top 20px
	p
		margin-bottom 0px
	.widget
		margin 20px 150px
		padding 20px 20px
		h1
			font-size 15px 
			text-align center
			font-weight bold
		font-weight normal
		margin-bottom 0px

.space
	margin-top 20px

.widget
	border-radius 3px
	border 1px solid #ccc
	background-color background-color
	box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)
	line-height 1.8
	
	h1
		font-family 'Quicksand'
		margin 13px 10px 4px
		padding-bottom 10px
		border-radius 2px 2px 0px 0px
		//margin-bottom 10px
		font-size 20px
		text-align center
	ul
		border-top 1px dotted #ddd
		font-size 13px
		padding 0px 10px
		margin-bottom 10px
		padding-top 10px
		
	ul li a
		padding-left 10px
		text-decoration none
		
	ul li h2
		padding-left 5px
		text-decoration underline
		a
			color #444

p
	line-height 1.8

footer
	width 500px
	margin 50px auto
	border-top 1px dotted #ccc
	padding-top 5px
	font-size 13px
	text-align center
	clear both
	
.github
	padding-right 10px
	display inline
	
	a img
		width 16px
		height 16px

.Page
	display none
	&.Active
		display	block